# GitHub Configuration
GITHUB_TOKEN=your_github_token_here

# LLM API Keys (choose one or more)
OPENAI_API_KEY=your_openai_api_key_here
DEEPSEEK_TOKEN=your_deepseek_token_here
GLM_TOKEN=your_glm_token_here

# Webhook Configuration (for standalone server mode)
WEBHOOK_SECRET=your_webhook_secret_here

# Optional Configuration
WORKSPACE_PATH=/path/to/your/workspace
AUTO_COMMENT=true
AUTO_LABEL=true
ANALYSIS_DEPTH=medium
TRIGGER_EVENTS=opened,edited,reopened
EXCLUDE_LABELS=wontfix,duplicate
INCLUDE_LABELS=bug,enhancement
